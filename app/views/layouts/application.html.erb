  </head>

  <body>
    <nav class="main-nav">
      <ul class="drop-menu menu-1">
        <%= link_to "Home", root_path %>
      </ul>
      <ul class="drop-menu menu-2">
        <%= link_to "About", about_path %>
        <li>Contact</li>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
